{
  "version": "1.0",
  "generalRules": {
    "avoidSocialLogin": true,
    "socialLoginKeywords": ["google", "apple", "facebook", "microsoft", "github", "linkedin", "twitter"],
    "preferredButtonOrder": ["next", "continue", "log in", "sign in", "submit"],
    "waitBetweenSteps": 2000,
    "waitAfterSubmit": 3000,
    "maxRetries": 3
  },
  "sites": {
    "x.com": {
      "name": "X (Twitter)",
      "loginUrl": "https://x.com/i/flow/login",
      "flowType": "multi-step",
      "steps": [
        {
          "step": 1,
          "action": "fill_username",
          "nextButton": "Next"
        },
        {
          "step": 2,
          "action": "fill_password",
          "nextButton": "Log in"
        },
        {
          "step": 3,
          "action": "fill_2fa",
          "source": "sms",
          "sender": "40404",
          "messagePattern": "X authentication code: (\\d+)",
          "nextButton": "Next"
        }
      ],
      "notes": "Has Google/Apple OAuth buttons - avoid these"
    },
    "webflow.com": {
      "name": "Webflow",
      "loginUrl": "https://webflow.com/dashboard/login",
      "flowType": "single-page",
      "steps": [
        {
          "step": 1,
          "action": "fill_credentials",
          "nextButton": "Log in"
        }
      ],
      "notes": "Single-page login, email and password on same form"
    },
    "accounts.google.com": {
      "name": "Google",
      "loginUrl": "https://accounts.google.com",
      "flowType": "multi-step",
      "steps": [
        {
          "step": 1,
          "action": "fill_username",
          "nextButton": "Next"
        },
        {
          "step": 2,
          "action": "fill_password",
          "nextButton": "Next"
        },
        {
          "step": 3,
          "action": "fill_2fa",
          "source": "totp",
          "nextButton": "Next"
        }
      ],
      "notes": "May require TOTP, SMS, or Google prompt for 2FA"
    }
  }
}
